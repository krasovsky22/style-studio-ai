{
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "docs/ai-agent-integration-guide.md"
    },
    {
      "file": "docs/convex-api-methods.md"
    },
    {
      "file": "docs/convex-api-reference.md"
